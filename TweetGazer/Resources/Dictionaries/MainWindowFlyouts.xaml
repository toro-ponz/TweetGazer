<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="clr-namespace:TweetGazer.Behaviors"
    xmlns:Common="clr-namespace:TweetGazer.Common"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Properties="clr-namespace:TweetGazer.Properties"
    xmlns:Selectors="clr-namespace:TweetGazer.Selectors"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources/Dictionaries/TimelineResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Controls:Flyout
        x:Key="ApplicationSettingsFlyout"
        Margin="-50,0,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        CloseButtonVisibility="Collapsed"
        CloseCommand="{Binding Path=CloseCommand, Mode=OneTime}"
        DataContext="{Binding Path=ApplicationSettings}"
        Foreground="White"
        IsOpen="{Binding Path=IsOpen, Mode=TwoWay}"
        Position="Top">
        <Controls:Flyout.Background>
            <SolidColorBrush Opacity="0.75" Color="Black" />
        </Controls:Flyout.Background>
        <Grid Margin="50,50,0,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock
                    FontSize="30"
                    Foreground="White"
                    Text="設定"
                    TextWrapping="Wrap" />
                <Border
                    VerticalAlignment="Bottom"
                    BorderBrush="{DynamicResource AccentColorBrush}"
                    BorderThickness="0,0,0,1" />
            </Grid>
            <ScrollViewer Grid.Row="1">
                <WrapPanel HorizontalAlignment="Stretch">
                    <StackPanel Margin="20,20,0,0" HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="30,10"
                            FontSize="28"
                            Foreground="White"
                            Text="一般"
                            TextWrapping="Wrap" />
                        <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="0,0,0,1" />
                        <StackPanel Margin="60,30">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Width="300"
                                    FontSize="26"
                                    Foreground="White"
                                    Text="アクセントカラー" />
                                <ComboBox
                                    Width="300"
                                    Margin="30,5"
                                    FontSize="24"
                                    SelectedIndex="{Binding Path=AccentColorIndex, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                    SelectedValue="{Binding Path=AccentColor, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                    <ComboBoxItem>DodgerBlue</ComboBoxItem>
                                    <ComboBoxItem>Red</ComboBoxItem>
                                    <ComboBoxItem>Green</ComboBoxItem>
                                    <ComboBoxItem>Blue</ComboBoxItem>
                                    <ComboBoxItem>Purple</ComboBoxItem>
                                    <ComboBoxItem>Orange</ComboBoxItem>
                                    <ComboBoxItem>Lime</ComboBoxItem>
                                    <ComboBoxItem>Emerald</ComboBoxItem>
                                    <ComboBoxItem>Teal</ComboBoxItem>
                                    <ComboBoxItem>Cyan</ComboBoxItem>
                                    <ComboBoxItem>Indigo</ComboBoxItem>
                                    <ComboBoxItem>Violet</ComboBoxItem>
                                    <ComboBoxItem>Pink</ComboBoxItem>
                                    <ComboBoxItem>Magenta</ComboBoxItem>
                                    <ComboBoxItem>Crimson</ComboBoxItem>
                                    <ComboBoxItem>Amber</ComboBoxItem>
                                    <ComboBoxItem>Yellow</ComboBoxItem>
                                    <ComboBoxItem>Brown</ComboBoxItem>
                                    <ComboBoxItem>Olive</ComboBoxItem>
                                    <ComboBoxItem>Steel</ComboBoxItem>
                                    <ComboBoxItem>Mauve</ComboBoxItem>
                                    <ComboBoxItem>Taupe</ComboBoxItem>
                                    <ComboBoxItem>Sienna</ComboBoxItem>
                                    <ComboBoxItem>Cobalt</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Width="300"
                                    FontSize="26"
                                    Foreground="White"
                                    Text="テーマ" />
                                <ComboBox
                                    Width="300"
                                    Margin="30,5"
                                    FontSize="24"
                                    SelectedIndex="{Binding Path=BaseColorIndex, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                    SelectedValue="{Binding Path=BaseColor, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                    <ComboBoxItem>BaseLight</ComboBoxItem>
                                    <ComboBoxItem>BaseDark</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox
                                Margin="0,5"
                                IsChecked="{Binding Path=IsUpdateCheck, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="False">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="起動時に更新を確認する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="0,5"
                                IsChecked="{Binding Path=IsSendDebugInformations, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="False">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="デバッグ情報を送信する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsCloseAfterCreateStatusCorrect, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="ツイート時に自動でツイート画面を閉じる"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsCreateStatusWhenPressCtrlEnter, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="Ctrl+Enterでツイートを送信する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsCloseWhenClickImage, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="画像ダイアログにて画像をクリックでダイアログを閉じる"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsSmoothScrolling, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="滑らかなスクロールを行う"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="0,5"
                                IsChecked="{Binding Path=CreateStatusTrayVisibility, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="False">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="ツイートトレイを表示する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="20,20,0,0" HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="30,10"
                            FontSize="28"
                            Foreground="White"
                            Text="タイムライン"
                            TextWrapping="Wrap" />
                        <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="0,0,0,1" />
                        <StackPanel Margin="60,30">
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsGifAutoPlay, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="アニメーションGIFを自動再生する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsGifLoopPlay, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="アニメーションGIFをループ再生させる"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsVideoLoopPlay, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="動画をループ再生させる"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsDisplayReplyStatus, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="リプライ先をTL上に表示する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsVisibleViaInformation, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="Via情報を表示する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsThumbnailing, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="ツイートの画像をトリミング(Crop)して表示する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsUseFavoriteStar, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="いいねアイコンを星にする"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Stretch"
                        IsEnabled="False">
                        <TextBlock
                            Margin="30,10"
                            FontSize="28"
                            Foreground="White"
                            Text="通知"
                            TextWrapping="Wrap" />
                        <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="0,0,0,1" />
                        <StackPanel Margin="60,30">
                            <CheckBox Margin="0,5" IsChecked="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="通知を許可する"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="30,5"
                                IsChecked="{Binding Path=IsNotifyOfMention, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=OneWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="メンション"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="30,5"
                                IsChecked="{Binding Path=IsNotifyOfReply, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=OneWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="リプライ"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="30,5"
                                IsChecked="{Binding Path=IsNotifyOfFavorite, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=OneWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="いいね"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="30,5"
                                IsChecked="{Binding Path=IsNotifyOfRetweet, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=OneWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="リツイート"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="30,5"
                                IsChecked="{Binding Path=IsNotifyOfQuote, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=OneWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="引用"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox
                                Margin="30,5"
                                IsChecked="{Binding Path=IsNotifyOfFollow, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
                                IsEnabled="{Binding Path=IsNotify, Source={x:Static Properties:Settings.Default}, Mode=OneWay}">
                                <TextBlock
                                    FontSize="26"
                                    Foreground="White"
                                    Text="フォロー"
                                    TextWrapping="Wrap" />
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </ScrollViewer>
            <Button
                Grid.Row="2"
                Width="100"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="閉じる"
                FontSize="16"
                Style="{StaticResource AccentedSquareButtonStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ei:CallMethodAction MethodName="Close" TargetObject="{Binding}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>
    </Controls:Flyout>

    <Controls:Flyout
        x:Key="MentionsFlyout"
        Width="335"
        Margin="0,30,0,0"
        DataContext="{Binding Path=Mentions}"
        CloseCommand="{Binding Path=CloseCommand, Mode=OneTime}"
        Foreground="{DynamicResource TextBrush}"
        IsOpen="{Binding Path=IsOpen, Mode=TwoWay}"
        Position="Left">
        <Controls:Flyout.Background>
            <SolidColorBrush Opacity="0.8" Color="{DynamicResource WhiteColor}" />
        </Controls:Flyout.Background>
        <Grid Width="280" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="10,0"
                Orientation="Horizontal">
                <Button
                    Width="73"
                    Height="73"
                    Margin="0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource UwpLikeButtonStyle2}">
                    <Image Source="{Binding Path=ProfileImageUrl, Mode=OneWay}" />
                </Button>
                <ComboBox
                    Width="170"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Path=ScreenNames}"
                    SelectedIndex="{Binding Path=TokenSuffix, Mode=TwoWay}" />
            </StackPanel>
            <Grid Grid.Row="1" Margin="10,10,10,0">
                <Button
                    Width="20"
                    Height="20"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource UwpLikeButtonStyle2}"
                    Visibility="{Binding Path=IsVisibleBackButton, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="Back" TargetObject="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ContentControl ContentTemplate="{StaticResource FrontColorBackArrowIcon}" />
                </Button>
                <Button
                    Width="20"
                    Height="20"
                    Margin="10,0"
                    Visibility="{Binding Path=IsVisibleBackButton, Mode=OneWay, Converter={StaticResource BooleanInvertAndToVisibilityConverter}}"
                    HorizontalAlignment="Right"
                    Style="{StaticResource UwpLikeButtonStyle2}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="Delete" TargetObject="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ContentControl ContentTemplate="{StaticResource AccentColorCloseIcon}" />
                </Button>
            </Grid>
            <ItemsControl
                Grid.Row="2"
                Behaviors:ItemsControlBehavior.AddingScroll="Timeline"
                ItemsSource="{Binding Path=TimelineItems, Mode=OneWay}"
                ScrollViewer.CanContentScroll="True"
                VirtualizingPanel.CacheLength="0"
                VirtualizingPanel.ScrollUnit="Pixel"
                VirtualizingStackPanel.IsVirtualizing="True">
                <ItemsControl.ItemTemplateSelector>
                    <Selectors:TimelineItemTemplateSelector />
                </ItemsControl.ItemTemplateSelector>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Template>
                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                        <ScrollViewer Behaviors:ScrollViewerBehavior.AnimationScrolling="True" VerticalScrollBarVisibility="Visible">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </Grid>
    </Controls:Flyout>

    <Controls:Flyout
        x:Key="NoticeFlyout"
        Width="335"
        Margin="0,30,0,0"
        CloseCommand="{Binding Path=CloseCommand, Mode=OneTime}"
        DataContext="{Binding Path=Notifications, Mode=OneWay}"
        Foreground="{DynamicResource TextBrush}"
        IsOpen="{Binding Path=IsOpen, Mode=TwoWay}"
        Position="Left">
        <Controls:Flyout.Background>
            <SolidColorBrush Opacity="0.8" Color="{DynamicResource WhiteColor}" />
        </Controls:Flyout.Background>
        <Grid Width="280" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="10,0"
                Orientation="Horizontal">
                <Button
                    Width="73"
                    Height="73"
                    Margin="0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource UwpLikeButtonStyle2}">
                    <Image Source="{Binding Path=ProfileImageUrl, Mode=OneWay}" />
                </Button>
                <ComboBox
                    Width="170"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Path=ScreenNames}"
                    SelectedIndex="{Binding Path=TokenSuffix, Mode=TwoWay}" />
            </StackPanel>
            <Grid Grid.Row="1" Margin="10,10,10,0">
                <Button
                    Width="20"
                    Height="20"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource UwpLikeButtonStyle2}"
                    Visibility="{Binding Path=IsVisibleBackButton, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="Back" TargetObject="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ContentControl ContentTemplate="{StaticResource FrontColorBackArrowIcon}" />
                </Button>
                <Button
                    Width="20"
                    Height="20"
                    Margin="10,0"
                    Visibility="{Binding Path=IsVisibleBackButton, Mode=OneWay, Converter={StaticResource BooleanInvertAndToVisibilityConverter}}"
                    HorizontalAlignment="Right"
                    Style="{StaticResource UwpLikeButtonStyle2}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="Delete" TargetObject="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ContentControl ContentTemplate="{StaticResource AccentColorCloseIcon}" />
                </Button>
            </Grid>
            <ItemsControl
                Grid.Row="2"
                Behaviors:ItemsControlBehavior.AddingScroll="Timeline"
                ItemsSource="{Binding Path=TimelineItems, Mode=OneWay}"
                ScrollViewer.CanContentScroll="True"
                VirtualizingPanel.CacheLength="0"
                VirtualizingPanel.ScrollUnit="Pixel"
                VirtualizingStackPanel.IsVirtualizing="True">
                <ItemsControl.ItemTemplateSelector>
                    <Selectors:TimelineItemTemplateSelector />
                </ItemsControl.ItemTemplateSelector>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Template>
                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                        <ScrollViewer Behaviors:ScrollViewerBehavior.AnimationScrolling="True" VerticalScrollBarVisibility="Visible">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </Grid>
    </Controls:Flyout>

    <Controls:Flyout
        x:Key="DirectMessagesFlyout"
        Width="335"
        Margin="0,30,0,0"
        Background="#BF000000"
        CloseCommand="{Binding Path=DirectMessages.CloseCommand, Mode=OneTime}"
        Foreground="White"
        IsOpen="{Binding Path=DirectMessages.IsOpen, Mode=TwoWay}"
        Position="Left">
        <Grid Width="280" HorizontalAlignment="Right" />
    </Controls:Flyout>

    <Controls:Flyout
        x:Key="AccountSettingsFlyout"
        Width="335"
        Margin="0,30,0,0"
        Background="#BF000000"
        CloseCommand="{Binding Path=CloseCommand, Mode=OneTime}"
        DataContext="{Binding Path=AccountSettings}"
        Foreground="White"
        IsOpen="{Binding Path=IsOpen, Mode=TwoWay}"
        Position="Left">
        <Grid Width="280" HorizontalAlignment="Right">
            <Grid.Background>
                <SolidColorBrush Opacity="0.5" Color="Black" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Margin="0,0,0,10">
                <Button Style="{StaticResource UwpLikeButtonStyle2}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="SelectProfileBanner" TargetObject="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Image Source="{Binding Path=ProfileBanner, Mode=OneWay, Converter={StaticResource NullImageConverter}}" />
                </Button>
                <Button
                    Width="25"
                    Height="25"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{StaticResource UwpLikeButtonStyle2}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="RemoveProfileBanner" TargetObject="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ContentControl ContentTemplate="{StaticResource AccentColorCloseIcon}" />
                </Button>
                <StackPanel Margin="10,0" Orientation="Horizontal">
                    <Button
                        Width="73"
                        Height="73"
                        HorizontalAlignment="Left"
                        Style="{StaticResource UwpLikeButtonStyle2}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <ei:CallMethodAction MethodName="SelectProfileImage" TargetObject="{Binding}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Image Source="{Binding Path=ProfileImage, Mode=OneWay, Converter={StaticResource NullImageConverter}}" />
                    </Button>
                    <ComboBox
                        Width="170"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding Path=ScreenNames, StringFormat=@{0}}"
                        SelectedIndex="{Binding Path=TokenSuffix, Mode=TwoWay}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border
                    VerticalAlignment="Top"
                    BorderBrush="{DynamicResource AccentColorBrush}"
                    BorderThickness="0,1,0,0" />
                <ScrollViewer Margin="0,1">
                    <StackPanel Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.ColumnSpan="2">
                                <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="0,0,0,1" />
                                <TextBlock
                                    Margin="10"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="プロフィール" />
                                <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="0,1,0,0" />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <Image />
                                <Image />
                                <TextBox
                                    Margin="5"
                                    Controls:TextBoxHelper.Watermark="Name"
                                    FontSize="16"
                                    Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Margin="5"
                                    Controls:TextBoxHelper.Watermark="ScreenName"
                                    FontSize="16"
                                    IsEnabled="False"
                                    Text="{Binding Path=ScreenName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    MinHeight="64"
                                    Margin="5"
                                    Controls:TextBoxHelper.Watermark="Description"
                                    AcceptsReturn="True"
                                    FontSize="16"
                                    Text="{Binding Path=Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Margin="5"
                                    Controls:TextBoxHelper.Watermark="Location"
                                    FontSize="16"
                                    Text="{Binding Path=Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Margin="5"
