<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="NotificationErrorTray">
        <Grid>
            <Rectangle
                Fill="Red"
                RadiusX="10"
                RadiusY="10" />

            <TextBlock
                Margin="10"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding Path=Message, Mode=OneTime}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
