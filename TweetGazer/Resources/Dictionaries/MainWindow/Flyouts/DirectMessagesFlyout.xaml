<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">

    <!--  ダイレクトメッセージFlyout  -->
    <Controls:Flyout
        x:Key="DirectMessagesFlyout"
        Width="335"
        Margin="0,30,0,0"
        CloseCommand="{Binding Path=DirectMessages.CloseCommand, Mode=OneTime}"
        Foreground="{DynamicResource TextBrush}"
        IsOpen="{Binding Path=DirectMessages.IsOpen, Mode=TwoWay}"
        Position="Left">
        <Controls:Flyout.Background>
            <SolidColorBrush Opacity="0.8" Color="{DynamicResource FlyoutColor}" />
        </Controls:Flyout.Background>
        <Grid Width="280" HorizontalAlignment="Right">
            <TextBlock
                FontSize="30"
                Foreground="{DynamicResource TextBrush}"
                Text="未実装"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>
    </Controls:Flyout>
</ResourceDictionary>
